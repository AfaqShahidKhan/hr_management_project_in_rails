        <p class="text-danger"><%= message %></p>
    <% end %>
    </div>
    </div><div class="col-lg-3 mt-2">
    <div class="form-group">
    <%= form.label   :country , class: "mb-2" %>
    <%= form.text_field :country , class: "form-control form-control-lg" %>
    <% @employee.errors.full_messages_for(:country).each do |message| %>
        <p class="text-danger"><%= message %></p>
    <% end %>
    </div>
    </div>
    <div class="col-lg-3 mt-2">
    <div class="form-group">
    <%= form.label   :pincode , class: "mb-2" %>
