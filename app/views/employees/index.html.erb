<div class="col-lg-12">
<%= flash[:notice] %>
<div class="card mt-5 mb-5 rounded-0">
<div class="card-body">
<h2 class="text-center">Listing Employees</h2>
</div>
</div>
<%= link_to "Create New Employee", new_employee_path , class: "btn btn-primary btn-lg mb-4 rounded-0"  %>
<table class='table table-bordered'>
<thead >
<tr>

<th>Name</th>
<th>Email</th>

<th>Adress</th>
<th>Actions</th>


</tr>
</thead>

<tbody>
  <% @employees.each do |employee| %>
   <tr> 
   <td><%= employee.name %></td>
   <td><%= employee.personal_email %></td>
   <td><%= employee.full_addres %></td>
   <td >
   <%= link_to "View", employee_path(employee) , class: "btn btn-primary" %>

   <%= link_to "Edit", edit_employee_path(employee), class: "btn btn-info" %>

   
   <%= link_to "Delete", employee_path(employee), method: :delete, class: "btn btn-danger", data: { confirm: "Are You sure to delete this employee" } %>
  
  
   </tr>
  <% end %>
</tbody> 
</table>
</div>